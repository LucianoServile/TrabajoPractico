package HeroeVillano;

import java.util.Comparator;

public abstract class Combatiente implements Comparator<Caracteristica> {

	private String nombre; // nombre de liga o personaje
	private Equipo equipo; // heroe o villano

	public Combatiente(String nombre, Equipo equipo) {
		this.nombre = nombre;
		this.equipo = equipo;
	}

	public abstract int getCaracteristica(Caracteristica c);

	public abstract boolean esGanador(Combatiente combatiente, Caracteristica c);

	public Equipo getEquipo() {
		return this.equipo;
	}

	public int comparator() {
		return 0;
	}

	public String getNombre() {
		return nombre;
	}
}

