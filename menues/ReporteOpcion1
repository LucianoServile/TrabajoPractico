import java.util.Iterator;

public class ReporteOpcion1 extends ItemSubMenu {

	private Sistema s;
	
	public ReporteOpcion1(String nombre) {
		super(nombre);
		agregarOpciones(new ItemSimple("Personajes o ligas que venzan a un personaje dado para cierta caracter√≠stica"));
	}

	@Override
	public void ejecutarFuncion() {
	}


	public void agregarOpciones(ItemAbstracto item) {
		opciones.add(item);
	}

	public void listarOpciones() {
		Iterator<ItemAbstracto> itr = this.opciones.listIterator();
		int i = 0;
		System.out.println(this.nombre);
		while (itr.hasNext()) {
			System.out.print(i + "- ");
			System.out.println(itr.next().getNombre());
			i++;
		}
	}
}
