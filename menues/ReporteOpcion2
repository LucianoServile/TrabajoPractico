import java.util.Iterator;

public class ReporteOpcion2 extends ItemSubMenu{
	private Sistema s;

	public ReporteOpcion2(String nombre) {
		super(nombre);
		agregarOpciones(new ItemSimple("Listar Personajes"));
	}

	@Override
	public void ejecutarFuncion() {
		
	}

	public void agregarOpciones(ItemAbstracto item) {
		opciones.add(item);
	}

	public void listarOpciones() {
		Iterator<ItemAbstracto> itr = this.opciones.listIterator();
		int i = 0;
		System.out.println(this.nombre);
		while (itr.hasNext()) {
			System.out.print(i + "- ");
			System.out.println(itr.next().getNombre());
			i++;
		}
	}
}
